%#
%# $Id$
%#
% layout 'default';
% title 'Dumper';
% use Mojo::Util qw(dumper);
% use Encode qw(decode encode);

% use utf8;
% use strict;

% my $m = $self->app->model;

% my $agentID = $req->param('id');
% my $res = $self->app->model->agentDelete($agentID);

% my $jobID = $m->jobCreate;
% $m->jobUpdate(
%    $jobID, 
%    type => 'agentdelete',
%    sourceid => $agentID,
%    destid => $agentID, 
%    author => $c->session('username')
% );

% do {
    <div class="callout success">
        Agent id <%= $agentID %> was deleted successful.
    </div>
    $m->jobUpdate($jobID, status => 'done', error => 'noerr', stop => $m->timestamp);
% } if $res;

% do {
    <div class="callout alert">
        Agent id <%= $agentID %> was deleted unsuccessful.
    </div>
    $m->jobUpdate($jobID, status => 'error', error => 'agentdelerr', stop => $m->timestamp);
% } unless $res;

<div class="text-center">
    <a class="button" href="/agent/list">Agent List</a>
</div>
%#EOF

